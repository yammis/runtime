//角色编辑 显示
function DialogShow() {
    $("#overlay").show();
    $("#context-holder").show();
    $("#content-box").show();
}

//角色管理关闭编辑
function DialogClose() {
    $("#role-name").val("");

    $("#user-list").empty();
    $("#overlay").hide();
    $("#context-holder").hide();
}

